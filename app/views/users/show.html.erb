<h1 align="center">Welsome to <%= @user.username %>'s page</h1>
<div class="row">
  <div class="mx-auto">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<h4 align="center"><%= @user.username %>'s articles</h4>
<%= will_paginate @user_articles, list_classes: %w(pagination justify-content-center),
                  previous_label: "Previous", next_label: "Next" %>
<%= render 'articles/article', obj: @user_articles %>
<%= will_paginate @user_articles, list_classes: %w(pagination justify-content-center pt-3),
                  previous_label: "Previous", next_label: "Next" %>